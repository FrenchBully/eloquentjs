{
    "atom": {
        "rewriteTsconfig": false
    },
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src/*",
        "src/**/*"
    ],
    "scripts": {
        "prepublish": "tsc"
    }
}